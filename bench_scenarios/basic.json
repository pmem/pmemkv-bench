{
    "db_bench": {
        "repo_url": "https://github.com/pmem/pmemkv-tools.git",
        "commit": "HEAD",
        "env": {
            "PMEM_IS_PMEM_FORCE": "1"
        },
        "params": [
            "--db=/dev/shm/pmemkv",
            "--db_size_in_gb=1"
        ]
    },
    "pmemkv": {
        "repo_url": "https://github.com/pmem/pmemkv.git",
        "commit": "HEAD",
        "cmake_params": [
            "-DCMAKE_BUILD_TYPE=Release",
            "-DENGINE_RADIX=1",
            "-DBUILD_JSON_CONFIG=1",
            "-DCXX_STANDARD=20",
            "-DBUILD_TESTS=OFF",
            "-DBUILD_DOC=OFF",
            "-DEXAMPLES=OFF"
        ],
        "env": {
            "CC": "gcc",
            "CXX": "g++"
        }
    },
    "libpmemobjcpp": {
        "repo_url": "https://github.com/pmem/libpmemobj-cpp.git",
        "commit": "HEAD",
        "cmake_params": [
            "-DBUILD_EXAMPLES=OFF",
            "-DBUILD_TESTS=OFF",
            "-DBUILD_DOC=OFF",
            "-DBUILD_BENCHMARKS=OFF",
            "-DCMAKE_BUILD_TYPE=Release"
        ],
        "env": {
            "CC": "gcc",
            "CXX": "g++"
        }
    }
}
